{
  "manifest_version": 2,

  "name": "Matisa",
  "description": "This extension allows Isabelle math syntax on GitHub to be appropriately typeset.",
  "version": "1.1.0",

  "browser_action": {
    "default_icon": "matisa128.png",
    "default_popup": "popup.html"
  },
  "icons": { "16": "matisa16.png",
            "128": "matisa128.png" 
  },
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["github/github.js"]
    },
    {
      "matches": ["*://bitbucket.org/*"],
      "js": ["bitbucket/bitbucket.js"]
    }
  ],
  "web_accessible_resources": [
    "MathJax.js",
    "config/*",
    "extensions/*",
    "fonts/*",
    "jax/*",
    "localization/*",
    "github/matisa.js",
    "bitbucket/matisa.js",
    "isabellesyntax.js"
  ],
  "permissions": [
    "*://github.com/*"
  ]
}